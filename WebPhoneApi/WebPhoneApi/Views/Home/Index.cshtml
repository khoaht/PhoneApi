<div class="jumbotron">
    <h1>TeleGo Phone System Testing</h1>
</div>
<div class="row">
    <div class="form-group">
        <label>UserName:</label>
        <input class="form-control" type="text" id="txtUserName" value="telego" placeholder="Enter UserName" required />
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input class="form-control" type="password" id="txtPassword" value="telego" placeholder="Enter password" required />
    </div>
    <div class="form-group">
        <label>CustomerId:</label>
        <input class="form-control" type="text" id="txtCustomerId" value="1" placeholder="Enter customer id" required />
    </div>
    <div class="form-group">
        <label>CallerId:</label>
        <input class="form-control" type="tel" id="txtCallerId" value="7187827573" placeholder="Enter callerId" required />
    </div>
    <div class="form-group">
        <label>Result-Extension Number:</label>
        <input id="lblResult" class="form-control" type="text" readonly />
    </div>
    <button class="btn btn-primary btn-large" onclick="GetExtension()">Request</button>

</div>
<div class="row">
    <div class="col-md-12">
        <textarea class="xmlshow"></textarea>
    </div>
</div>
<style>
    .xmlshow {
        background-color: #ffffff;
        width: 100%;
        display: block;
        border: none;
    }
</style>
<script>
    function GetExtension() {
        var username = $('#txtUserName').val();
        var password = $('#txtPassword').val();
        var callerId = $('#txtCallerId').val();
        var customerId = $('#txtCustomerId').val();
        $('#lblResult').val('Waiting...');
        var url = "api/Phone/GetExtension";
        $.ajax({
            type: 'GET',
            url: url,
            data: { username: username, password: password, customerId: customerId, callerId: callerId }
        }).done(function (result) {
            $('#lblResult').val('');
            $(".xmlshow").html(result);
        })
    }
</script>
